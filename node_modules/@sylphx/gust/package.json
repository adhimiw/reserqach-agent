{
	"name": "@sylphx/gust",
	"version": "0.1.7",
	"description": "High-performance WASM-powered HTTP server framework",
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"example": "bun run examples/basic.ts",
		"lint": "biome check .",
		"format": "biome format --write .",
		"build": "bunup --no-splitting",
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "bun run build && bunx @sylphx/doctor prepublish"
	},
	"keywords": [
		"gust",
		"sylphx",
		"http",
		"server",
		"web",
		"fast",
		"wasm",
		"bun"
	],
	"license": "MIT",
	"dependencies": {
		"@sylphx/gust-core": "^0.1.7"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@sylphx/biome-config": "^0.4.0",
		"@sylphx/bump": "^1.0.0",
		"@sylphx/doctor": "^1.24.0",
		"bunup": "^0.16.10",
		"lefthook": "^2.0.4"
	}
}
