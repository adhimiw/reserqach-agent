# ============================================
# Research Agent - Environment Configuration
# Copy this file to .env and fill in your API keys
# ============================================

# ============== LLM API Keys ==============
# Perplexity (Primary - for research and reasoning)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Mistral (Alternative model)
MISTRAL_API_KEY=your_mistral_api_key_here

# Cohere (Alternative model)
COHERE_API_KEY=your_cohere_api_key_here

# Smithery/Claude (Best for writing quality)
SMITHERY_API_KEY=your_smithery_api_key_here

# ============== Search & Web Tools ==============
# Tavily Search API
TAVILY_API_KEY=your_tavily_api_key_here

# Firecrawl (Web scraping)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# ============== MCP Server Configuration ==============
# Enable/disable specific MCP servers
PERPLEXITY_MCP_ENABLED=true
WORD_MCP_ENABLED=true
BROWSER_MCP_ENABLED=true
FIRECRAWL_MCP_ENABLED=false
CONTAINER_MCP_ENABLED=false
POWERBI_MCP_ENABLED=false

# ============== Code Execution ==============
# E2B Sandbox (for secure code execution)
ENABLE_E2B_SANDBOX=false
E2B_API_KEY=your_e2b_api_key_here

# ============== DSPy Configuration ==============
DSPY_ENABLED=true
DSPY_OPTIMIZER=BootstrapFewShot
DSPY_TRAINING_EXAMPLES=20

# ============== Agent Configuration ==============
ENABLE_MULTI_AGENT=true
MAX_AGENT_ITERATIONS=10
AGENT_TIMEOUT=300

# ============== Performance Settings ==============
ENABLE_ASYNC=true
MAX_CONCURRENT_TASKS=5
ENABLE_CACHING=true
ENABLE_PROMPT_COMPRESSION=true
MAX_PROMPT_LENGTH=4000
COMPRESSION_RATIO=0.4

# ============== Research Workflow ==============
MAX_RESEARCH_DEPTH=3
MAX_ITERATIONS=5
ENABLE_PLANNING=true
ENABLE_RESEARCH=true
ENABLE_VERIFICATION=true
ENABLE_WRITING=true

# ============== Search Tools ==============
ENABLE_TAVILY=true

# ============== Logging ==============
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true
